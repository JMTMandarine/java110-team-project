<?xml version="1.0" encoding="UTF-8"?>
<!-- 아이디 찾기에 사용할 XML입니다. -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indiesker.java110.ms.dao.AuthDao">

<!-- 아이디 찾기 -->
    <select id="findByEamil" parameterType="string" resultType="Member">
    SELECT id 
    FROM memb 
    where email=#{email}
    </select>


<!-- 비밀번호 찾기 -->
    <!-- 비밀번호 찾을때 아이디와 일치하는 이메일인지 체크 -->
    <select id="checkEmail" parameterType="string" resultType="String">
    SELECT email 
    FROM memb 
    where id=#{id}
    </select>

    <update id="update_pw" parameterType="String">
        update memb
        set pwd = '1234'
        where email=#{email}
    </update>

