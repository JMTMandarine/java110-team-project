<?xml version="1.0" encoding="UTF-8"?>
<!-- MemberDao 클래스가 사용할 SQL이 들어 있는 파일 -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indiesker.java110.ms.dao.BuskerBoardMainDao">

<resultMap type="BuskerBoardMain" id="buskerBoardMap">
        <id column="bbno"  property="bbno"/>
        <result column="titl"    property="titl"/>
        <result column="name"    property="name"/>
        <result column="genre"    property="genre"/>
        <result column="city"    property="city"/>
        <result column="sdt"    property="sdt"/>
        <result column="edt"    property="edt"/>
        <result column="cnt"    property="cnt"/>
        <result column="etc"    property="etc"/>
        <result column="flag"    property="flag"/>
         <result column="phot"    property="phot"/>
</resultMap>




<select id="findAll" resultMap="buskerBoardMap" parameterType="map">
SELECT bb.bbno,bb.titl,b.name,bb.genre,bb.city,bb.sdt,bb.edt,bb.cnt,bb.etc,bb.flag,bb.phot
FROM busk_board as bb, busk as b
WHERE bb.bno = b.bno
    </select>
    
    
</mapper>

