<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indiesker.java110.ms.dao.FollowerDao">

<resultMap type="Follwer" id="followerMap">
        <id column="bno"  property="bno"/>
        <result column="name"    property="teamname"/>
        <result column="genre"    property="teamgenre"/>
        <result column="city"    property="city"/>
        <result column="intro"    property="teaminfo"/>
        <result column="phot"    property="phot"/>
</resultMap>

<!-- 회원번호로 팔로우 버스커 번호 받아오기  -->
<select id="findFollwer" resultType="int" parameterType="int">
    SELECT bno 
    FROM folw 
    where mno=#{mno}
</select>


<!-- 즐겨찾기 목록 보기  -->
<select id="findList" resultMap="followerMap" parameterType="map">
    SELECT name, phot 
    FROM busk 
    where bno=#{bno}
</select>

<!-- 즐겨찾기 우측 자세히 보기 -->
<select id="findDetail" resultMap="followerMap" parameterType="map">
    SELECT name, genre, city, intro, phot 
    FROM busk 
    where bno=#{bno}
</select>
    
    
</mapper>

