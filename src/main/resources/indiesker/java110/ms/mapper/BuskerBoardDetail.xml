<?xml version="1.0" encoding="UTF-8"?>
<!-- MemberDao 클래스가 사용할 SQL이 들어 있는 파일 -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indiesker.java110.ms.dao.BuskerBoardDetailDao">

<resultMap type="BuskerBoardDetail" id="BuskerBoardDetail">
        <id column="bbno"  property="bbno"/>
        <result column="titl"    property="titl"/>
        <result column="name"    property="name"/>
        <result column="genre"    property="genre"/>
        <result column="city"    property="city"/>
        <result column="sdt"    property="sdt"/>
        <result column="edt"    property="edt"/>
        <result column="cnt"    property="cnt"/>
        <result column="etc"    property="etc"/>
        <result column="flag"    property="flag"/>
</resultMap>




<select id="findbbno" resultMap="BuskerBoardDetail" parameterType="int">
 SELECT bb.bbno
 ,bb.titl,b.name,bb.genre,bb.city,bb.sdt,bb.edt,bb.cnt,bb.etc,bb.flag
FROM busk_board bb, busk b 
WHERE bb.bbno = b.bno
  AND bb.bbno=#{no}
    </select>
    
    
</mapper>

